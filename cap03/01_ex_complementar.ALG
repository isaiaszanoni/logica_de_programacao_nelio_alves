Algoritmo "entendendo a formatação a:8:2"

Var
   a : real

Inicio

  a <- 2.34;

  escreval("O número é ", a)
  escreval("Formatando o número:")
  escreval("nenhum espaço entre as estrelas e apenas uma casa decimal (a:3:1)")
  escreval("*", a:3:1, "*")
  escreval("Dois espaços entre a estrela esquerda e 3 casas decimais")
  escreval("*", a:7:3, "*")
Fimalgoritmo